{
  "name": "senvf",
  "version": "2.0.0",
  "description": "A secure & sensible replacement for process.env",
  "license": "MIT",
  "author": "Connor Burton",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/connorjburton/senvf.git"
  },
  "engines": {
    "node": ">=6.4.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "tsc",
    "prepare": "husky install",
    "test": "ava",
    "docs": "typedoc index.ts",
    "lint:check": "yarn eslint",
    "lint:fix": "yarn eslint --fix",
    "style:check": "prettier . --check",
    "style:fix": "prettier . --write",
    "spell:check": "cspell **/** --no-must-find-files"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/node": "^18.7.19",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "ava": "^4.3.3",
    "cspell": "^6.12.0",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.3"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
